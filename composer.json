{
    "name": "lostinvlg/jwt",
    "description": "JWT Builder and Parser based on firebase/php-jwt",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Lostinvlg\\Jwt\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Viktor Chukleev",
            "email": "lostinvlg@yandex.ru"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0",
        "firebase/php-jwt": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.7",
        "vimeo/psalm": "^4.22"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --coverage-html tests/data/coverage",
        "fix": "./vendor/bin/php-cs-fixer fix --using-cache=no",
        "psalm": "./vendor/bin/psalm"
    }
}
